{
  "compilerOptions": {
      "types": ["jest"],
      "module": "commonjs",
      "noUnusedLocals": true,
      "declaration": true,
      "noUnusedParameters": true,
      "strictNullChecks": true,
      "target": "ES6",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "dist",
      "sourceMap": true
  },
  "include": [
      "src/index.ts",
      "src/test.ts"
  ],
  "exclude": [
      "node_modules",        
      "dist"
  ],
  "compileOnSave": true
}
